            </div>
            <div class="form-group">
                <label asp-for="valor_ferias" class="control-label"></label>
                <input asp-for="valor_ferias" class="form-control" />
                <span asp-validation-for="valor_ferias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imposto_renda" class="control-label"></label>
                <input asp-for="imposto_renda" class="form-control" />
                <span asp-validation-for="imposto_renda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_fgts" class="control-label"></label>
                <input asp-for="valor_fgts" class="form-control" />
                <span asp-validation-for="valor_fgts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

