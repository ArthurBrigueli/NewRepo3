    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="vale_alimentacao" class="control-label"></label>
                <input asp-for="vale_alimentacao" class="form-control" />
                <span asp-validation-for="vale_alimentacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vale_transporte" class="control-label"></label>
                <input asp-for="vale_transporte" class="form-control" />
