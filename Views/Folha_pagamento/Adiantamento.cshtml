@model pimfo.Models.Folha_pagamento

@{
    ViewData["Title"] = "Adiantamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adiantamento</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RealizarAdiantamento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Cpf do funcionario</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_adiantado" class="control-label"></label>
                <input asp-for="valor_adiantado" class="form-control" />
                <span asp-validation-for="valor_adiantado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Realizar Adiantamento" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
