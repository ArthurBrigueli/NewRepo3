@model pimfo.Models.Funcionarios
@{
    ViewData["Title"] = "Adiantamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adiantamento</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Gerar_Adiantamento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" class="form-control" />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_adiantamento" class="control-label"></label>
                <input asp-for="valor_adiantamento" class="form-control" />
                <span asp-validation-for="valor_adiantamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gerar Adiantamento" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

