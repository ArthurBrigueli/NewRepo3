@model pimfo.Models.Funcionarios

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar funcionario</h1>

<h4>Funcionarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
